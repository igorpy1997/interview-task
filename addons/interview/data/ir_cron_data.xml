<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Daily cron job to recalculate delivery dates for non-confirmed orders -->
        <record id="ir_cron_recalculate_delivery_dates" model="ir.cron">
            <field name="name">Recalculate Delivery Dates for Non-Confirmed Orders</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.recalculate_delivery_dates()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall">False</field>
        </record>
    </data>
</odoo>
