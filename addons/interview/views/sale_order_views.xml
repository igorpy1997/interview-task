<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Sale Order Form View -->
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add delivery fields after partner_id -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="delivery_term_type_id" options="{'no_create': True, 'no_edit': True}"/>
                <field name="delivery_date"/>
            </xpath>

            <!-- Extend order lines to show new fields -->
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                <field name="width" optional="show"/>
                <field name="height" optional="show"/>
                <field name="square_meters" optional="show"/>
            </xpath>

            <!-- Extend order lines form view -->
            <xpath expr="//field[@name='order_line']/form//field[@name='product_uom_qty']" position="after">
                <field name="width"/>
                <field name="height"/>
                <field name="square_meters"/>
            </xpath>
        </field>
    </record>
</odoo>