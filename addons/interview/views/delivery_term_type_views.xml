<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Delivery Term Type Tree View -->
    <record id="view_delivery_term_type_tree" model="ir.ui.view">
        <field name="name">delivery.term.type.tree</field>
        <field name="model">delivery.term.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="term_type"/>
                <field name="days_offset" attrs="{'invisible': [('term_type', '!=', 'days')]}"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Delivery Term Type Form View -->
    <record id="view_delivery_term_type_form" model="ir.ui.view">
        <field name="name">delivery.term.type.form</field>
        <field name="model">delivery.term.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="term_type"/>
                            <field name="days_offset" attrs="{'invisible': [('term_type', '!=', 'days')]}"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Delivery Term Type Action -->
    <record id="action_delivery_term_type" model="ir.actions.act_window">
        <field name="name">Delivery Term Types</field>
        <field name="res_model">delivery.term.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a delivery term type
            </p>
            <p>
                Define delivery term types that will be used to automatically calculate delivery dates.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="menu_delivery_term_type"
        name="Delivery Term Types"
        parent="sale.sale_menu_root"
        action="action_delivery_term_type"
        sequence="10"/>
</odoo>